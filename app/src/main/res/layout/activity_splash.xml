<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

   <com.badoualy.stepperindicator.StepperIndicator
       app:stpi_stepCount="4"
       android:id="@+id/indicator"
       app:stpi_bottomIndicatorHeight="16dp"
       app:stpi_bottomIndicatorWidth="16dp"
       app:stpi_indicatorRadius="4dp"
       app:stpi_showDoneIcon="true"
       app:stpi_showLabels="true"
       app:stpi_indicatorColor="@color/colorAccent"
       app:stpi_circleRadius="10dp"
       android:layout_marginBottom="@dimen/pageMargin"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>