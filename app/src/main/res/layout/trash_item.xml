<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="flashcard"
            type="com.example.flashcards.models.FlashCardData" />
    </data>


        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            app:cardCornerRadius="@dimen/dpi_4"
            android:layout_margin="@dimen/dpi_8"
            android:id="@+id/trashItemCardView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dpi_120">

            <LinearLayout
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:padding="@dimen/dpi_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/labelBlack"
                        android:src="@drawable/ic_label_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/cardTitle"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/dpi_8"
                        android:textColor="#000"
                        android:textSize="@dimen/text_18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <TextView
                    android:id="@+id/flashCardCount"
                    android:textColor="#000"
                    android:textSize="@dimen/text_14"
                    android:padding="@dimen/dpi_8"
                    android:layout_width="@dimen/dpi_100"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

</layout>