<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.madrapps.pikolo.HSLColorPicker
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/colorPicker"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>


    <ImageView
        android:id="@+id/imageView"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_chose_color"
        app:layout_constraintEnd_toEndOf="@id/colorPicker"
        app:layout_constraintStart_toStartOf="@id/colorPicker"
        app:layout_constraintBottom_toBottomOf="@id/colorPicker"
        app:layout_constraintTop_toTopOf="@id/colorPicker"
        android:layout_width="100dp"
        android:layout_height="100dp"/>


    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/colorPicker"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textSize="18sp"
            android:background="?attr/selectableItemBackground"
            android:layout_margin="4dp"
            android:id="@+id/cancelButtonPicker"
            android:text="cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <Button
            android:textSize="18sp"
            android:background="?attr/selectableItemBackground"
            android:layout_margin="4dp"
            android:id="@+id/okButtonPicker"
            android:text="Ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>