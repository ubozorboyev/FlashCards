<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.madrapps.pikolo.HSLColorPicker
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/colorPicker"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dpi_250"/>


    <ImageView
        android:id="@+id/imageView"
        android:layout_marginBottom="@dimen/dpi_8"
        android:layout_marginEnd="@dimen/dpi_8"
        android:layout_marginStart="@dimen/dpi_8"
        android:layout_marginTop="@dimen/dpi_8"
        android:background="@drawable/bg_chose_color"
        app:layout_constraintEnd_toEndOf="@id/colorPicker"
        app:layout_constraintStart_toStartOf="@id/colorPicker"
        app:layout_constraintBottom_toBottomOf="@id/colorPicker"
        app:layout_constraintTop_toTopOf="@id/colorPicker"
        android:layout_width="@dimen/dpi_100"
        android:layout_height="@dimen/dpi_100"/>


    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/colorPicker"
        android:layout_marginTop="@dimen/dpi_10"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textSize="@dimen/text_14"
            android:background="?attr/selectableItemBackground"
            android:layout_margin="@dimen/dpi_4"
            android:id="@+id/cancelButtonPicker"
            android:text="cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <Button
            android:textSize="@dimen/text_14"
            android:background="?attr/selectableItemBackground"
            android:layout_margin="@dimen/dpi_4"
            android:id="@+id/okButtonPicker"
            android:text="Ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>